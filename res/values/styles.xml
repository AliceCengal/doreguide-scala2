<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <color name="white">#ffffff</color>

    <color name="bright_gold">#E7B850</color>
    <color name="brighter_gold">#f3dca8</color>
    <color name="dark_gold">#d8ab4c</color>
    <color name="dore_blue">#006682</color>
    <color name="dore_red">#993d1b</color>
    <color name="dark_gray">#333333</color>
    <color name="light_gray">#dddddd</color>

    <style name="detail_name_text">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="description_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="description_text_wall">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>


</resources>
